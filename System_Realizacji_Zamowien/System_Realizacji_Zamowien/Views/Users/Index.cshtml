@model IEnumerable<System_Realizacji_Zamowien.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var grid = new WebGrid(Model, canPage: true, rowsPerPage:10);
    grid.Pager(WebGridPagerModes.NextPrevious);
}

<div id="page-wrapper">
    <div class="container-fluid admin-panel">
            <a href="~/Users/Create">
                <center><img src="~/icons/create2.png" /></center>
                <label>Dodaj użytkownika</label>
            </a>
        @grid.GetHtml(columns: grid.Columns(
        grid.Column("Login", "Login"),
        grid.Column("Password", "Hasło"),
        grid.Column("Name", "Imię"),
        grid.Column("Surname", "Nazwisko"),
        grid.Column("Phone", "Telefon"),
        grid.Column("Employer.Nip", "Nip firmy"),
        grid.Column("Employer.Name", "Nazwa firmy"),
        grid.Column(format: (item) => Html.ActionLink("Edycja", "Edit", new { id = item.Id })),
        grid.Column(format: (item) => Html.ActionLink("Usuń", "Delete", new { id = item.Id })),
        grid.Column(format: (item) => Html.ActionLink("Szczegóły", "Details", new { id = item.Id }))),
        tableStyle: "table")
    </div>
</div>
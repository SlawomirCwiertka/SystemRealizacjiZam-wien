@model System_Realizacji_Zamowien.ViewModel.LoginViewModel

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
@using (Html.BeginForm())
{

    Html.ValidationSummary();
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">

                <h1 class="page-header text-center" >
                    
                </h1>
                
                 
                        <br /><br />
                        <div class="row">
                            <div class="col-lg-4"></div>
                            <div class="col-lg-3 text-center">
                                <div>

                                    <label>Login</label>
                                    <br />
                                    @Html.TextBoxFor(m => m.Login, new { @class = "form-control", @placeholder = "Podaj Login" })

                                    <div class="form-group has-error">
                                        <label class="control-label" for="inputError">@Html.ValidationMessageFor(m => m.Login)</label>
                                    </div>

                                    <label>Hasło</label>
                                    <br />
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Podaj Hasło" })

                                    <div class="form-group has-error">
                                        <label class="control-label" for="inputError">@Html.ValidationMessageFor(m => m.Password) </label>
                                    </div>

                                    <button type="submit" class="btn btn-default">Zaloguj</button>
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                    



               
            </div>
        </div>
    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@model System_Realizacji_Zamowien.ViewModel.RegistrationViewModel
@{

    ViewBag.Title = "Registration";
}

@using (Html.BeginForm())
{
    <center>

        <fieldset>
            <div id="page-wrapper">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <h1 class="page-header">
                                Dodawanie Konta
                            </h1>


                            <div class="col-lg-12">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover table-striped">





                                        <tr>
                                            <td>Login</td>
                                            <td>@Html.TextBoxFor(m => m.Login, new { @class = "form-control" })</td>
                                            <td>@Html.ValidationMessageFor(m => m.Login)</td>
                                        </tr>
                                        <tr>
                                            <td>Imie</td>
                                            <td>
                                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                            </td>
                                            <td>
                                                @Html.ValidationMessageFor(m => m.Name)
                                            </td>

                                        </tr>
                                        <tr>
                                            <td>Nazwisko</td>
                                            <td>@Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })</td>
                                            <td>@Html.ValidationMessageFor(m => m.Surname)</td>
                                        </tr>
                                        <tr>
                                            <td>Hasło</td>
                                            <td>@Html.PasswordFor(m => m.Password, new { @class = "form-control" })</td>

                                            <td>@Html.ValidationMessageFor(m => m.Password)</td>
                                        </tr>

                                        <tr>
                                            <td>Telefon</td>
                                            <td>@Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })</td>
                                            <td>@Html.ValidationMessageFor(m => m.Phone)</td>
                                        </tr>

                                        <tr>
                                            <td>Uprawnienia</td>
                                            <td>@Html.DropDownListFor(m => m.SelectedAccess, Model.Accesses, new { @class = "form-control" })</td>
                                            <td>@Html.ValidationMessageFor(m => m.SelectedAccess)</td>
                                        </tr>

                                        <tr>
                                            <td>Firma</td>
                                            <td>@Html.DropDownListFor(m => m.SelectedFirm, Model.Firms, new { @class = "form-control" })</td>
                                            <td><a class="btn btn-default" href="~/Firms/Create">Dodaj firme</a></td>
                                        </tr>
                                    </table>
                                    <input type="submit" value="Zarejestruj" />
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
    </center>
}

@section Scripts
{@Scripts.Render("~/bundles/jqueryval")}


